<!-- 好友區 -->
<div class="row">
  <% unless current_user.friends.blank? %>
    <% current_user.friends.each do |friend| %>
    <div class="col-md-2 text-center">
      <figure>
        <%= image_tag friend.avatar, size: "120" %>
      </figure>
      <p><%= friend.name %></p>
    </div>
    <% end %>
  <% end %>     
</div>

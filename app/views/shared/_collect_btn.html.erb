<% if current_user.collects.where(post: object).exists? %>
  <div id="collect-<%= object.id %>">
    <%= link_to "uncollect", uncollect_post_path(object), remote: true, method: :post, class: "btn btn-primary"%>
  </div>
<% else %>
  <div id="collect-<%= object.id %>">
    <%= link_to "collect", collect_post_path(object),method: :post, remote: true, class: "btn btn-success"%>
  </div>
<% end %>
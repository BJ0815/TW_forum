<section id="admin">
  <div class="container">
    <div class="nav">
      <h1 class="active"><%= link_to "Category List", admin_categories_path %></h1>
      <h1><%= link_to "User list", admin_users_path %></h1>
    </div>


    <div class="create-bar">
      <%= form_for [:admin,@category] do |f| %>
      <div class="form-group">
        <%= f.text_field :name, placeholder: "Category Name", class: "form-block" %>
      </div>
      <%= f.submit "Create", class: "btn btn-custom" %>

      <% end %>
    </div>

    <div class="admin-content">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <td style="width: 65%"><%= category.name %></td>
            <td>
              <%= link_to "edit", edit_admin_category_path(category), class: "btn btn-custom" %>
              <%= link_to "Delete", admin_category_path(category), method: :delete, class: "btn btn-danger" %> 
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
<section id="new-post-page">
  <div class="container">
    <%= form_for @post do |f| %>
      <div class="form-group">
        <%= f.text_field :title, placeholder: "title", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.text_area :description, placeholder: "description", class: "form-control", style: "height: 100px;" %>
      </div>
      <div class="form-group">
        <%= image_tag @post.photo if @post.photo %>
        <%= f.file_field :photo %>
      </div>
      <div class="form-group">
        <div class="form-check form-check-inline">Who Can See</div>

        <div class="form-check form-check-inline">
          <%= radio_button :post, :article_role, "all", { checked: true , class: "form-check-input"} %>
          <%= label_tag 'All', nil, class: "form-check-label" %>
        </div>
        <div class="form-check form-check-inline">
          <%= radio_button :post, :article_role, "friend", class: "form-check-input" %>
          <%= label_tag 'Friend', nil, class: "form-check-label" %>
        </div>
        <div class="form-check form-check-inline">
          <%= radio_button :post, :article_role, "myself", class: "form-check-input" %>
          <%= label_tag 'Myseld', nil, class: "form-check-label" %>
        </div>
      </div>
      <div class="form-group">
        <div class="form-check form-check-inline">Category</div>
        <% Category.all.each do |category| %>
        <div class="form-check form-check-inline">
          <%= f.check_box :category_id, {mutiple: true, class: "form-check-input"}, category.id, nil %>
          <%= f.label category.name, class: "form-check-label" %>
        </div>
        <% end %>
      </div>
      <div class="form-group">
        <p>States: </p>
        <%= f.submit "Save Draft", class: "btn btn-warning" %>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</section>

